<Page x:Class="FileManager.Pages.PageCode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCode">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Text="Code" FontSize="20" Width="200" Height="100" Foreground="White"/>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Vertical">
                <Button x:Name="Button1" Content="btn1" Style="{StaticResource PageButton}" Click="Button1_Click"/>
                <Button x:Name="Button2" Content="btn2" Style="{StaticResource PageButton}" Click="Button2_Click"/>
                <Button x:Name="Button3" Content="btn3" Style="{StaticResource PageButton}" Click="Button3_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
