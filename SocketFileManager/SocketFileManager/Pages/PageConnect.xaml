<Page x:Class="SocketFileManager.Pages.PageConnect"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SocketFileManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageConnect">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Server IP :" FontSize="24" Margin="0 0 0 10" TextAlignment="Center"  Foreground="#BBB"/>
            <TextBox FontSize="24" Margin="10" Background="#444" TextAlignment="Center" Foreground="#CCC"/>
            <Button Content="Connect" FontSize="24" Margin="10" Width="150" Background="#444" Foreground="#4A4" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>
